{
  "manifest_version": 3,
  "name": "AI Social Media Comment Generator",
  "version": "1.0",
  "description": "Generate context-aware social media comments using AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.instagram.com/*",
    "https://*.facebook.com/*",
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.linkedin.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
} 